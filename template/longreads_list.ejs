<!DOCTYPE html5>
<html>

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/st/longreads_list.css">
    <link rel="stylesheet" href="/st/main.css">
    <link rel="stylesheet" href="/st/longreads.css">

    <script src="http://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="/st/longreads_list.js"></script>
</head>

<body>
    <a href="/admin/longread/create" class="longread-list__btn__create">Создать лонгрид</button>
    <% for (var i = 0; i < articles.length; i+= 1) { %>
        <div class="longread__wrapper">
            <a href="/admin/longread/edit/<%= articles[i].id %>">
                <div class="longread__field__title">
                    <%= articles[i].title %>
                </div>
            </a>
            <div class="longread__field__lead">
                <%= articles[i].lead %>
            </div>
            <div class="longread__field__info">
                <div class="longread__field__author">
                    <%= articles[i].author %>
                </div>
                <div class="longread__field__date">
                    <%= articles[i].date %>
                </div>
            </div>
        </div>
        <a class="longread-list__btn__publish" href="/admin/longread/publish/<%= articles[i].id %>">Опубликовать</a>
    <% } %>
</body>

</html>
